					"raw": "{\n  \"customerId\": 1,\n  \"orderDate\": \"15-01-2024\",\n  \"invoiceNumber\": \"PO-2024-001\",\n  \"products\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 10.000,\n      \"unitPrice\": 100.00,\n      \"batchNumber\": \"BATCH001\",\n      \"remarks\": \"First order\"\n    },\n    {\n      \"productId\": 2,\n      \"quantity\": 5.000,\n      \"unitPrice\": 200.00,\n      \"batchNumber\": \"BATCH002\",\n      \"remarks\": \"Second item\"\n    }\n  ],\n  \"packagingAndForwadingCharges\": 50.00\n}",
